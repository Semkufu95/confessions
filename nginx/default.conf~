
server {
    listen 443 ssl http2;
    server_name confessions.africa www.confessions.africa;

    # SSL certfications from certbot
    ssl_certificate /etc/letsencrypt/live/confessions.africa/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/confessions.africa/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;

	# Frontend (static files)
    location / {
        proxy_pass http://front:5173;
        proxy_http_version 1.1;

	proxy_set_header Upgrade $http_upgrade;
	proxy_set_header Connection "upgrade";

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

	# Backend API
    location /api/ {
        # rewrite ^/api/(.*)$ /$1 break;
        proxy_pass http://backend:5000/;
        proxy_http_version 1.1;

	proxy_set_header Upgrade $http_upgrade;
	proxy_set_header Connection "upgrade";

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

	proxy_buffering off;
	proxy_read_timeout 3600;
    }
    
    location ~ /\.(env|git|ht) {
    	deny All;
	
    }

    client_max_body_size 50M;
}
services:
  db:
    image: postgres:16-alpine
    container_name: postgres
    restart: always
    environment:
        POSTGRES_USER: semkufu
        POSTGRES_PASSWORD: semkufu
        POSTGRES_DB: confessions
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - app-net

  redis:
    image: redis:7-alpine
    container_name: redis
    restart: always
    ports:
      - "6379:6379" 
    volumes:
      - redis_data:/data

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: backend
    ports:
      - "5000:5000"
    volumes:
      - ./backend:/app
      - /app/tmp
    environment:
      - GO_ENV=development
      - DATABASE_URL=postgres://semkufu:semkufu@db:5432/confessions?sslmode=disable
      - REDIS_HOST=redis
      - REDIS_PORT=6379
    depends_on:
      - db
      - redis
    networks:
      - app-net

#  front:
#    build:

#   environment:
#     - VITE_API_URL=http://localhost:5000/api
#   depends_on:
#     - backend
#   networks:
#     - app-net

  nginx:
    build:
      context: .
      dockerfile: nginx/Dockerfile
    container_name: confessions-nginx
    ports:
       - "80:80"
       - "443:443"
    volumes:
       - /etc/letsencrypt:/etc/letsencrypt:ro  #certs from host
    depends_on:
       - backend
    networks:
      - app-net

networks:
  app-net:
    driver: bridge

volumes:
  postgres_data:
  redis_data:
